<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table id="posts-list">
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Time</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <!-- <th colspan="3"></th> -->
    </tr>

  <!-- <tbody> -->
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.time %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <!-- </tbody> -->
</table>

