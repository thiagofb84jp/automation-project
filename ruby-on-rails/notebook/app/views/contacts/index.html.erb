<div class="smart-green">
  <script>
    $.notify("<%= notice %>", "success");
  </script>

  <p id="notice"></p>

  <h1> <%= "#{t('messages.listing')} #{@contacts.model_name.human(count: @contacts.count)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @contacts.human_attribute_name("name") %></th>
        <th><%= @contacts.human_attribute_name("kind") %></th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr style="background: <%= cycle('#c4daff', '#eff3f9') %>">
          <td><%= contact.name %></td>
          <td><%= contact.kind.description %></td>
          <td><%= link_to t('buttons.edit'), edit_contact_path(contact) %></td>
          <td><%= link_to t('buttons.destroy'), contact, method: :delete, data: { confirm: t('messages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= paginate @contacts %>
  <br>

  <%= link_to t('buttons.new'), new_contact_path, class: "btn btn-primary" %>
  <%= link_to t('buttons.home'), root_path, class: "btn btn-success" %>
  <!-- 'link_to' utilizado para retornar a pÃ¡gina anterior -->
  <!-- <%= link_to "Back", :back %> -->
</div>