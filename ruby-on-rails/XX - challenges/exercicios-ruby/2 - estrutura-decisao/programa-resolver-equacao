Program resolver_equacao ;
	var a,b,c:REAL;
		delta1,delta2:REAL;
		x1,x2:REAL;
 Begin
 	Writeln ('Qual o valor de A?');
 		readln(a);
 	// Se A = 0, fechar o programa sem pedir os outros valores
 	
 	if(a = 0) then
 		begin
 		Writeln('O valor de A não pode ser zero');
 		end;
	 
 	Writeln ('Qual o valor de B?');
 		readln(b);
 	Writeln ('Qual o valor de C?');
 		readln(c);
 		
 	// delta = b²-4ac
 	delta1 := (b*b)-4*a*c;
 	delta2 := sqrt(delta1);
 	// Calculando as raizes
 	x1 := (-b+delta2)/2*a;
 	x2 := (-b-delta2)/2*a;
 	// Verficando se os valores de delta são iguais ou menores que zero
 	if (delta1 < 0) then
	 begin
	 	Writeln ('O valor de delta é ',delta1:0:0); 
 		Writeln ('Esta equação não possue raizes reais.');
 	 end;
 	 
 	 if (delta1 = 0) then
 	  begin
 	  	Writeln ('O valor de delta é ',delta1:0:0); 
 	  	Writeln ('Essa equação possue duas raizes reais e iguais.');
 	  	Writeln ('A primeira raiz é  ',x1:2:2);
 	  	Writeln ('A segunda raiz é  ',x2:2:2);
 	  end
 	  
 	 else if (delta1 > 0) then
 	  begin
 	  	Writeln ('O valor de delta é ',delta1:0:0); 
 	  	Writeln ('A Equação possuem duas raizes reais e diferentes!');
 	  	Writeln ('A primeira raiz é ',x1:2:2);
 	  	Writeln ('A Segunda raiz é ',x2:2:2);
 	  end;  
 End.